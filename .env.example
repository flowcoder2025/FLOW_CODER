# 데이터베이스 연결
# 개발 환경: PostgreSQL 로컬 설정
# Supabase 사용 시: postgresql://postgres:[PASSWORD]@db.[PROJECT-REF].supabase.co:5432/postgres
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/vibe_coding"

# Supabase Direct Connection (선택적 - Prisma Migrate용)
# DIRECT_URL="postgresql://postgres:[PASSWORD]@db.[PROJECT-REF].supabase.co:5432/postgres"

# NextAuth 설정 (인증 시스템용)
# 개발: http://localhost:3000
# 프로덕션: https://yourdomain.com
NEXTAUTH_URL="http://localhost:3000"
# 생성: openssl rand -base64 32
NEXTAUTH_SECRET="your-nextauth-secret-key"

# 사이트 기본 URL (SEO용)
# 개발: http://localhost:3000
# 프로덕션: https://yourdomain.com
NEXT_PUBLIC_BASE_URL="http://localhost:3000"

# OAuth 설정 (GitHub)
# GitHub OAuth App: https://github.com/settings/developers
GITHUB_ID="your-github-client-id"
GITHUB_SECRET="your-github-client-secret"

# OAuth 설정 (Google)
# Google Cloud Console: https://console.cloud.google.com
GOOGLE_ID="your-google-client-id"
GOOGLE_SECRET="your-google-client-secret"

# Cloudinary 설정 (이미지 업로드)
CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-api-key"
CLOUDINARY_API_SECRET="your-api-secret"

# Supabase Client 설정 (선택적 - 실시간 기능용)
# Supabase Dashboard: https://app.supabase.com/project/[PROJECT-ID]/settings/api
# NEXT_PUBLIC_SUPABASE_URL="https://[PROJECT-REF].supabase.co"
# NEXT_PUBLIC_SUPABASE_ANON_KEY="your-supabase-anon-key"

# Sentry 에러 트래킹 (모니터링)
# Sentry 프로젝트: https://sentry.io/organizations/[ORG]/projects/
# DSN 형식: https://[KEY]@o[ORG-ID].ingest.sentry.io/[PROJECT-ID]
# NEXT_PUBLIC_SENTRY_DSN="your-sentry-dsn"

# Admin API 설정 (웹훅 인증)
# 생성: openssl rand -base64 32
# 인바운드 웹훅에서 외부 시스템 인증에 사용
ADMIN_API_KEY="your-admin-api-key"
