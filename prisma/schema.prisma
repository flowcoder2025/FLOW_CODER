generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// NextAuth.js 인증 모델 + 커뮤니티 프로필
enum UserRole {
  USER
  MODERATOR
  ADMIN
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?

  // 커뮤니티 프로필 확장
  username      String?   @unique
  displayName   String?
  bio           String?   @db.Text
  reputation    Int       @default(0)
  role          UserRole  @default(USER)

  // Relations
  accounts      Account[]
  posts         Post[]
  comments      Comment[]
  answers       Answer[]
  votes         Vote[]

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([username])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

// 외부 약관 관리 모델
model ExternalTerms {
  id          String   @id @default(cuid())
  slug        String   @unique
  title       String
  description String?
  content     String   @db.Text
  published   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// ===== 커뮤니티 플랫폼 모델 =====

// 카테고리 (게시판 분류)
model Category {
  id          String   @id @default(cuid())
  name        String   @unique
  slug        String   @unique
  description String?  @db.Text
  icon        String?
  color       String?
  postCount   Int      @default(0)
  createdAt   DateTime @default(now())

  // Relations
  posts       Post[]

  @@index([slug])
}

// 게시글 타입 enum
enum PostType {
  DISCUSSION
  QUESTION
  SHOWCASE
  NEWS
}

// 게시글 (커뮤니티, Q&A, 뉴스 통합)
model Post {
  id            String   @id @default(cuid())
  title         String
  content       String   @db.Text
  postType      PostType @default(DISCUSSION)
  authorId      String
  categoryId    String
  upvotes       Int      @default(0)
  downvotes     Int      @default(0)
  viewCount     Int      @default(0)
  isPinned      Boolean  @default(false)
  isLocked      Boolean  @default(false)
  tags          String[]
  coverImageUrl String?
  deletedAt     DateTime? // Soft delete
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  author        User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  category      Category @relation(fields: [categoryId], references: [id])
  comments      Comment[]
  answers       Answer[]
  votes         Vote[]

  @@index([categoryId])
  @@index([authorId])
  @@index([createdAt(sort: Desc)])
  @@index([postType])
  @@index([deletedAt])
}

// 댓글 (스레드 형식 지원)
model Comment {
  id         String   @id @default(cuid())
  content    String   @db.Text
  authorId   String
  postId     String
  parentId   String?
  upvotes    Int      @default(0)
  downvotes  Int      @default(0)
  deletedAt  DateTime? // Soft delete
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // Relations
  author     User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  post       Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  parent     Comment? @relation("CommentReplies", fields: [parentId], references: [id], onDelete: Cascade)
  replies    Comment[] @relation("CommentReplies")

  @@index([postId])
  @@index([authorId])
  @@index([parentId])
  @@index([deletedAt])
}

// 답변 (Q&A 전용)
model Answer {
  id         String   @id @default(cuid())
  content    String   @db.Text
  questionId String
  authorId   String
  isAccepted Boolean  @default(false)
  upvotes    Int      @default(0)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // Relations
  question   Post     @relation(fields: [questionId], references: [id], onDelete: Cascade)
  author     User     @relation(fields: [authorId], references: [id], onDelete: Cascade)

  @@index([questionId])
  @@index([authorId])
}

// 투표 타입 enum
enum VoteType {
  UP
  DOWN
}

// 투표 (게시글, 댓글, 답변)
model Vote {
  id        String   @id @default(cuid())
  userId    String
  postId    String?
  voteType  VoteType
  createdAt DateTime @default(now())

  // Relations
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  post      Post?    @relation(fields: [postId], references: [id], onDelete: Cascade)

  @@unique([userId, postId])
  @@index([userId])
  @@index([postId])
}

// ===== Zanzibar 권한 시스템 (Google Zanzibar 패턴) =====

// 권한 튜플: (namespace:object_id, relation, subject_type:subject_id)
// 예: (post:123, owner, user:456) = user:456은 post:123의 소유자
model RelationTuple {
  id          String   @id @default(cuid())

  // Tuple 구성 요소
  namespace   String   // 'post', 'comment', 'category', 'system', 'question', 'answer'
  objectId    String   // 리소스 ID
  relation    String   // 'owner', 'editor', 'viewer', 'moderator', 'admin'
  subjectType String   // 'user', 'group', 'user_set'
  subjectId   String   // User ID 또는 그룹 ID

  createdAt   DateTime @default(now())

  // 유니크 제약: 같은 튜플은 한 번만 존재
  @@unique([namespace, objectId, relation, subjectType, subjectId])

  // 인덱스: 권한 체크 및 리스트 조회 최적화
  @@index([namespace, objectId, relation])
  @@index([subjectType, subjectId])
  @@index([namespace, relation, subjectId])

  @@map("relation_tuples")
}

// 관계 정의 메타데이터 (선택적, 상속 관계 문서화)
model RelationDefinition {
  id              String   @id @default(cuid())
  namespace       String   // 'post', 'comment', 'category', 'system'
  relation        String   // 'owner', 'editor', 'viewer'
  inheritsFrom    String?  // 상속 관계: 'editor' → 'viewer'
  description     String?

  @@unique([namespace, relation])
  @@map("relation_definitions")
}

// 권한 예시:
// 1. 게시글 소유자: (post, "123", owner, user, "user_456")
// 2. 카테고리 모더레이터: (category, "free", moderator, user, "user_789")
// 3. 시스템 관리자: (system, "global", admin, user, "user_admin")
// 4. 공개 뷰어: (post, "123", viewer, user, "*") - 모든 사용자

// ===== 아웃바운드 웹훅 시스템 =====

enum WebhookEvent {
  POST_CREATED
  POST_UPDATED
  POST_DELETED
}

model WebhookSubscription {
  id          String        @id @default(cuid())
  url         String        // 웹훅을 전송할 외부 URL
  secret      String        // HMAC 서명용 시크릿 키
  events      WebhookEvent[] // 구독할 이벤트 목록
  isActive    Boolean       @default(true)
  description String?       // 웹훅 설명

  // 통계
  lastTriggeredAt DateTime?
  failureCount    Int       @default(0)

  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  @@index([isActive])
  @@map("webhook_subscriptions")
}
