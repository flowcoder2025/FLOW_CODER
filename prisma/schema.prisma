generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// NextAuth.js 인증 모델 + 커뮤니티 프로필
enum UserRole {
  USER
  MODERATOR
  ADMIN
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?

  // 커뮤니티 프로필 확장
  username      String?   @unique
  displayName   String?
  bio           String?   @db.Text
  reputation    Int       @default(0)
  role          UserRole  @default(USER)

  // Relations
  accounts      Account[]
  posts         Post[]
  comments      Comment[]
  answers       Answer[]
  votes         Vote[]
  notifications Notification[] @relation("UserNotifications")
  triggeredNotifications Notification[] @relation("NotificationActor")

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([username])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

// 외부 약관 관리 모델
model ExternalTerms {
  id          String   @id @default(cuid())
  slug        String   @unique
  title       String
  description String?
  content     String   @db.Text
  published   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// ===== 커뮤니티 플랫폼 모델 =====

// 카테고리 타입 enum
enum CategoryType {
  COMMUNITY  // 커뮤니티 게시판 (자유, Q&A, 쇼케이스)
  NEWS       // 뉴스 카테고리 (공지, IT소식, 컬럼, 가이드)
}

// 카테고리 (게시판 분류)
model Category {
  id           String       @id @default(cuid())
  name         String       @unique
  slug         String       @unique
  description  String?      @db.Text
  icon         String?
  color        String?
  categoryType CategoryType @default(COMMUNITY)
  postCount    Int          @default(0)
  createdAt    DateTime     @default(now())

  // Relations
  posts        Post[]

  @@index([slug])
  @@index([categoryType])
}

// 게시글 타입 enum
enum PostType {
  DISCUSSION
  QUESTION
  SHOWCASE
  NEWS
}

// 게시글 (커뮤니티, Q&A, 뉴스 통합)
model Post {
  id            String   @id @default(cuid())
  title         String
  content       String   @db.Text
  postType      PostType @default(DISCUSSION)
  authorId      String
  categoryId    String
  upvotes       Int      @default(0)
  downvotes     Int      @default(0)
  viewCount     Int      @default(0)
  isPinned      Boolean  @default(false)  // 카테고리별 고정 게시글
  isFeatured    Boolean  @default(false)  // 홈 캐러셀 "주목할 만한 프로젝트"
  isLocked      Boolean  @default(false)
  tags          String[]
  coverImageUrl String?  // 레거시 필드 (하위 호환성)
  deletedAt     DateTime? // Soft delete
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  author        User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  category      Category @relation(fields: [categoryId], references: [id])
  comments      Comment[]
  answers       Answer[]
  votes         Vote[]
  images        PostImage[] // 다중 이미지 지원

  @@index([categoryId])
  @@index([authorId])
  @@index([createdAt(sort: Desc)])
  @@index([postType])
  @@index([deletedAt])
  @@index([isFeatured])  // 홈 캐러셀 조회 최적화
}

// 게시글 이미지 (다중 이미지 첨부 지원)
model PostImage {
  id         String   @id @default(cuid())
  postId     String
  url        String   // Supabase Storage URL
  alt        String?  // 대체 텍스트 (접근성)
  order      Int      @default(0) // 표시 순서
  isFeatured Boolean  @default(false) // 대표 이미지 (캐루셀/미리보기용)
  createdAt  DateTime @default(now())

  // Relations
  post       Post     @relation(fields: [postId], references: [id], onDelete: Cascade)

  @@index([postId])
  @@index([postId, isFeatured]) // 대표 이미지 조회 최적화
  @@index([postId, order]) // 순서대로 조회 최적화
}

// 댓글 (스레드 형식 지원)
model Comment {
  id         String   @id @default(cuid())
  content    String   @db.Text
  authorId   String
  postId     String
  parentId   String?
  upvotes    Int      @default(0)
  downvotes  Int      @default(0)
  deletedAt  DateTime? // Soft delete
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // Relations
  author     User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  post       Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  parent     Comment? @relation("CommentReplies", fields: [parentId], references: [id], onDelete: Cascade)
  replies    Comment[] @relation("CommentReplies")

  @@index([postId])
  @@index([authorId])
  @@index([parentId])
  @@index([deletedAt])
}

// 답변 (Q&A 전용)
model Answer {
  id         String   @id @default(cuid())
  content    String   @db.Text
  questionId String
  authorId   String
  isAccepted Boolean  @default(false)
  upvotes    Int      @default(0)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // Relations
  question   Post     @relation(fields: [questionId], references: [id], onDelete: Cascade)
  author     User     @relation(fields: [authorId], references: [id], onDelete: Cascade)

  @@index([questionId])
  @@index([authorId])
}

// 투표 타입 enum
enum VoteType {
  UP
  DOWN
}

// 투표 (게시글, 댓글, 답변)
model Vote {
  id        String   @id @default(cuid())
  userId    String
  postId    String?
  voteType  VoteType
  createdAt DateTime @default(now())

  // Relations
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  post      Post?    @relation(fields: [postId], references: [id], onDelete: Cascade)

  @@unique([userId, postId])
  @@index([userId])
  @@index([postId])
}

// 알림 타입 enum
enum NotificationType {
  COMMENT   // 댓글 알림
  ANSWER    // 답변 알림
  LIKE      // 좋아요 알림
  MENTION   // 멘션 알림
  SYSTEM    // 시스템 알림
}

// 알림
model Notification {
  id        String           @id @default(cuid())
  type      NotificationType
  title     String
  message   String           @db.Text
  read      Boolean          @default(false)
  link      String?          // 알림 클릭 시 이동할 URL
  userId    String           // 알림 수신자
  actorId   String?          // 알림 발생시킨 사용자 (예: 댓글 작성자)
  createdAt DateTime         @default(now())

  // Relations
  user      User             @relation("UserNotifications", fields: [userId], references: [id], onDelete: Cascade)
  actor     User?            @relation("NotificationActor", fields: [actorId], references: [id], onDelete: SetNull)

  @@index([userId])
  @@index([userId, read])  // 읽지 않은 알림 조회 최적화
  @@index([createdAt(sort: Desc)])
}

// ===== Zanzibar 권한 시스템 (Google Zanzibar 패턴) =====

// 권한 튜플: (namespace:object_id, relation, subject_type:subject_id)
// 예: (post:123, owner, user:456) = user:456은 post:123의 소유자
model RelationTuple {
  id          String   @id @default(cuid())

  // Tuple 구성 요소
  namespace   String   // 'post', 'comment', 'category', 'system', 'question', 'answer'
  objectId    String   // 리소스 ID
  relation    String   // 'owner', 'editor', 'viewer', 'moderator', 'admin'
  subjectType String   // 'user', 'group', 'user_set'
  subjectId   String   // User ID 또는 그룹 ID

  createdAt   DateTime @default(now())

  // 유니크 제약: 같은 튜플은 한 번만 존재
  @@unique([namespace, objectId, relation, subjectType, subjectId])

  // 인덱스: 권한 체크 및 리스트 조회 최적화
  @@index([namespace, objectId, relation])
  @@index([subjectType, subjectId])
  @@index([namespace, relation, subjectId])

  @@map("relation_tuples")
}

// 관계 정의 메타데이터 (선택적, 상속 관계 문서화)
model RelationDefinition {
  id              String   @id @default(cuid())
  namespace       String   // 'post', 'comment', 'category', 'system'
  relation        String   // 'owner', 'editor', 'viewer'
  inheritsFrom    String?  // 상속 관계: 'editor' → 'viewer'
  description     String?

  @@unique([namespace, relation])
  @@map("relation_definitions")
}

// 권한 예시:
// 1. 게시글 소유자: (post, "123", owner, user, "user_456")
// 2. 카테고리 모더레이터: (category, "free", moderator, user, "user_789")
// 3. 시스템 관리자: (system, "global", admin, user, "user_admin")
// 4. 공개 뷰어: (post, "123", viewer, user, "*") - 모든 사용자

// ===== 아웃바운드 웹훅 시스템 =====

enum WebhookEvent {
  POST_CREATED
  POST_UPDATED
  POST_DELETED
}

model WebhookSubscription {
  id          String        @id @default(cuid())
  url         String        // 웹훅을 전송할 외부 URL
  secret      String        // HMAC 서명용 시크릿 키
  events      WebhookEvent[] // 구독할 이벤트 목록
  isActive    Boolean       @default(true)
  description String?       // 웹훅 설명

  // 통계
  lastTriggeredAt DateTime?
  failureCount    Int       @default(0)

  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  @@index([isActive])
  @@map("webhook_subscriptions")
}
